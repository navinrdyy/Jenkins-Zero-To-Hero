    // Example Groovy script in a Jenkinsfile to build a Docker image
    pipeline {
        agent any
        stages {
            stage('Build Docker Image') {
                steps {
                    script {
                        docker.build("my-java-app:latest")
                    }
                }
            }
            stage('Run the Docker Image'){
                steps {
                    script{
                        docker run my-java-app
                    }
                }
            }
        }
    }
